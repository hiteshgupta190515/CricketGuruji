<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.65">

        <TextView
            android:id="@+id/batsmanname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batting"
            android:textColor="#222"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/catchout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c"
                android:textColor="@color/grey_500"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/catchout_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player"
                android:textColor="@color/grey_500"
                android:textSize="12dp"
                android:layout_marginStart="2dp"/>

            <TextView
                android:id="@+id/bowled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b"
                android:textColor="@color/grey_500"
                android:textSize="12dp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/bowled_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player"
                android:textColor="@color/grey_500"
                android:textSize="12dp"
                android:layout_marginStart="2dp"/>

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/batsmanruns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="R"
        android:textColor="#222"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/batsmanballs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="B"
        android:textColor="#222"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/batsmanfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="4s"
        android:textColor="#222"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/batsmansix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="6s"
        android:textColor="#222"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/batsmansr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SR"
        android:textColor="#222"
        android:textSize="15dp" />

</LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="@color/grey_20"/>
    </LinearLayout>